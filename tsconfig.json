{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["./utils/*"],
      "@tests/*": ["./tests/*"],
      "@artifacts/*": ["./artifacts/*"],
      "@typechain-types": ["./typechain-types/index.ts"]
    }
  }
}
